import sys

BUXON_PATH = '/usr/share/buxon/'
sys.path.append(BUXON_PATH)

try:
    from run import BuxonMain
    sys.exit(BuxonMain(sys.argv[1:], BUXON_PATH))
except ImportError:
    print 'Buxon cannot be found; please, ensure that it is installed correctly.'
    sys.exit(1)

